<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	

	<ThingDef ParentName="VG_BenchBase">
		<defName>CPD_DrinksTable</defName>
		<label>soda table</label>
		<thingClass>Building_WorkTable</thingClass>
		<description>A table for preparing and brewing a variety of beverages.</description>
		<graphicData>
			<texPath>Things/Building/DrinksTable/DrinksTable</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3.5,1.5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<costList>
			<Steel>20</Steel>
			<WoodLog>30</WoodLog>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>2000</WorkToBuild>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<WorkTableWorkSpeedFactor>0.7</WorkTableWorkSpeedFactor>
		</statBases>
		<size>(3,1)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<tickerType>Rare</tickerType>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
    <researchPrerequisites>
	   <li>Brewing</li>
    </researchPrerequisites>
	</ThingDef>


	<ThingDef ParentName="VG_BenchBase">
		<defName>CPD_ElectricDrinksTable</defName>
		<label>electric soda table</label>
		<thingClass>Building_WorkTable</thingClass>
		<description>A table for preparing and brewing a variety of beverages. Can work without electricity at 70% of normal speed.</description>
		<graphicData>
			<texPath>Things/Building/DrinksTable/DrinksTable</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3.5,1.5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<costList>
			<Steel>20</Steel>
			<WoodLog>30</WoodLog>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>2000</WorkToBuild>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<size>(3,1)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<tickerType>Rare</tickerType>
		<comps>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>100</basePowerConsumption>
				<shortCircuitInRain>false</shortCircuitInRain>
			</li>
		</comps>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
    <researchPrerequisites>
       <li>Electricity</li>
	   <li>Brewing</li>
	 
    </researchPrerequisites>
	</ThingDef>
</Defs>